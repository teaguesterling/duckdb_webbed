# =============================================================================
# STRIP_NAMESPACES PARAMETER TESTS
# =============================================================================

# Test 29: namespaces := 'keep' (preserve namespace prefixes)
query I
SELECT xml_to_json('<root xmlns:ns="http://example.com"><ns:item><ns:name>Test</ns:name></ns:item></root>', namespaces := 'keep');
----
{"root":{"ns:item":{"ns:name":{"#text":"Test"}}}}

# Test 30: namespaces := 'strip' (default behavior - strip namespaces)
query I
SELECT xml_to_json('<root xmlns:ns="http://example.com"><ns:item><ns:name>Test</ns:name></ns:item></root>', namespaces := 'strip');
----
{"root":{"item":{"name":{"#text":"Test"}}}}

# Test 31: namespaces := 'keep' with attributes
query I
SELECT xml_to_json('<root xmlns:ns="http://example.com"><ns:item ns:id="1" type="test">content</ns:item></root>', namespaces := 'keep');
----
{"root":{"ns:item":{"@ns:id":"1","@type":"test","#text":"content"}}}

# Test 32: namespaces := 'keep' with force_list
query I
SELECT xml_to_json('<root xmlns:ns="http://example.com"><ns:item><ns:name>Test</ns:name></ns:item></root>', namespaces := 'keep', force_list := ['ns:name']);
----
{"root":{"ns:item":{"ns:name":[{"#text":"Test"}]}}}

# =============================================================================
# EMPTY_ELEMENTS PARAMETER TESTS
# =============================================================================

# Test 33: empty_elements := 'object' (default behavior)
query I
SELECT xml_to_json('<root><empty/><item><empty_child/></item></root>', empty_elements := 'object');
----
{"root":{"empty":{},"item":{"empty_child":{}}}}

# Test 34: empty_elements := 'null'
query I
SELECT xml_to_json('<root><empty/><item><empty_child/></item></root>', empty_elements := 'null');
----
{"root":{"empty":null,"item":{"empty_child":null}}}

# Test 35: empty_elements := 'string'
query I
SELECT xml_to_json('<root><empty/><item><empty_child/></item></root>', empty_elements := 'string');
----
{"root":{"empty":"","item":{"empty_child":""}}}

# Test 36: empty_elements with attributes (should preserve attributes)
query I
SELECT xml_to_json('<root><empty id="1" type="test"/></root>', empty_elements := 'null');
----
{"root":{"empty":{"@id":"1","@type":"test"}}}

# Test 37: empty_elements with force_list
query I
SELECT xml_to_json('<root><item><empty/></item></root>', empty_elements := 'null', force_list := ['empty']);
----
{"root":{"item":{"empty":[null]}}}

# =============================================================================
# COMBINED PARAMETER TESTS
# =============================================================================

# Test 38: All parameters combined
query I
SELECT xml_to_json('<root xmlns:ns="http://example.com"><ns:item ns:id="1"><ns:name>Test</ns:name><ns:empty/></ns:item></root>',
  force_list := ['ns:name'],
  attr_prefix := '_',
  text_key := 'content',
  namespaces := 'keep',
  empty_elements := 'null');
----
{"root":{"ns:item":{"_ns:id":"1","ns:empty":null,"ns:name":[{"content":"Test"}]}}}

# Test 39: Real-world complex example with custom settings
query I
SELECT xml_to_json('<catalog xmlns:prod="http://products.com">
  <prod:product prod:id="1" status="active">
    <prod:name>Laptop</prod:name>
    <prod:category>Electronics</prod:category>
    <prod:specs/>
  </prod:product>
  <prod:product prod:id="2" status="inactive">
    <prod:name>Phone</prod:name>
    <prod:name>Mobile Phone</prod:name>
    <prod:category>Electronics</prod:category>
  </prod:product>
</catalog>',
  force_list := ['prod:name'],
  attr_prefix := '',
  text_key := 'value',
  namespaces := 'keep',
  empty_elements := 'string');
----
{"catalog":{"prod:product":[{"prod:id":"1","status":"active","prod:category":{"value":"Electronics"},"prod:name":[{"value":"Laptop"}],"prod:specs":""},{"prod:id":"2","status":"inactive","prod:category":{"value":"Electronics"},"prod:name":[{"value":"Phone"},{"value":"Mobile Phone"}]}]}}

# Test 40: Parameter precedence and NULL handling
query I
SELECT xml_to_json('<root><item id="1">test</item></root>',
  force_list := NULL,
  attr_prefix := NULL,
  text_key := NULL,
  namespaces := NULL,
  empty_elements := NULL);
----
{"root":{"item":{"@id":"1","#text":"test"}}}

# =============================================================================
# NAMESPACE EXPANSION AND XMLNS_KEY TESTS
# =============================================================================

# Test 41: namespaces := 'expand' (full URIs)
query I
SELECT xml_to_json('<root xmlns:ns="http://example.com"><ns:item>Test</ns:item></root>', namespaces := 'expand');
----
{"root":{"http://example.com:item":{"#text":"Test"}}}

# Test 42: xmlns_key with namespaces := 'keep'
query I
SELECT xml_to_json('<root xmlns:ns="http://example.com" xmlns:svg="http://www.w3.org/2000/svg"><ns:item>Test</ns:item><svg:circle/></root>', namespaces := 'keep', xmlns_key := '#xmlns');
----
{"root":{"#xmlns":{"ns":"http://example.com","svg":"http://www.w3.org/2000/svg"},"ns:item":{"#text":"Test"},"svg:circle":{}}}

# Test 43: xmlns_key with namespaces := 'expand'
query I
SELECT xml_to_json('<root xmlns:ns="http://example.com"><ns:item>Test</ns:item></root>', namespaces := 'expand', xmlns_key := '#xmlns');
----
{"root":{"#xmlns":{"ns":"http://example.com"},"http://example.com:item":{"#text":"Test"}}}

# Test 44: xmlns_key disabled (default)
query I
SELECT xml_to_json('<root xmlns:ns="http://example.com"><ns:item>Test</ns:item></root>', namespaces := 'keep');
----
{"root":{"ns:item":{"#text":"Test"}}}

# Test 45: xmlns_key with custom key
query I
SELECT xml_to_json('<root xmlns:ns="http://example.com"><ns:item>Test</ns:item></root>', namespaces := 'keep', xmlns_key := '@namespaces');
----
{"root":{"@namespaces":{"ns":"http://example.com"},"ns:item":{"#text":"Test"}}}
