# name: test/sql/read_html_table.test
# description: Test read_html table function for reading HTML files
# group: [xml]

require webbed

# Test read_html_objects returns raw HTML type
query I
SELECT typeof(html) AS content_type
FROM read_html_objects('test/html/simple.html');
----
HTML

# Test read_html_objects with multiple files (returns one row per file)
query I
SELECT count(*) AS file_count
FROM read_html_objects('test/html/*.html');
----
16

# Test read_html_objects with filename column
query II
SELECT count(*) AS file_count, count(DISTINCT filename) AS unique_filenames
FROM read_html_objects('test/html/*.html', filename=true);
----
16	16

# Test read_html_objects content extraction with XPath
query I
SELECT html_extract_text(html, '//title') AS page_title
FROM read_html_objects('test/html/simple.html');
----
Simple Page

# Test read_html_objects with complex file
query I
SELECT (unnest(html_extract_links(html))).href AS link_url
FROM read_html_objects('test/html/complex.html')
WHERE array_length(html_extract_links(html)) > 0;
----
https://example.com
/internal